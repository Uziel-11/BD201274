<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
  <class name="Alumno" table="Alumno">
   <id name="id"
            column="idAlumno"
            type="java.lang.Integer"
            unsaved-value="null" >
            <generator class="native">
            </generator>
        </id>

<property name="Nombre" column="Nombre"/>
<property name="Sexo" column="Sexo" />
<property name="Edad" column="Edad" />
    <many-to-one name="Ciudad" class="Ciudad" fetch="select">
            <column name="idCiudad" not-null="true" />
    </many-to-one>
  </class>
</hibernate-mapping>
