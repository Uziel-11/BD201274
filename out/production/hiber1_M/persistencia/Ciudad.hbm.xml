<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "classpath://org/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
  <class dynamic-insert="false" 
         dynamic-update="false" name="Ciudad" table="Ciudad">
      
     <id name="id"
            column="idCiudad"
            type="java.lang.Integer"
            unsaved-value="null" >
            <generator class="native">
            </generator>
        </id>
    <property name="Descripcion" type="java.lang.String"/>
    
   <bag name="Alumnos" table="Alumno"
        inverse="true" lazy="true" fetch="select">
        <key>
            <column name="idCiudad" not-null="true" />
        </key>
        <one-to-many class="Alumno"  />
    </bag>
    
    

  </class>
</hibernate-mapping>
