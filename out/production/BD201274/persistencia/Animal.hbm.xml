<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="persistencia">
    <class name="Animal" table="animales" >
        <id  name="idAnimal"
             column="IdAnimales"
             type="java.lang.Integer"
             unsaved-value="null">
            <generator class="native">
            </generator>
        </id>

        <property name="idCliente" column="idClientes"/>
        <property name="nombre"  column="Nombre" />
        <property name="color"  column="Color"/>
        <property name="especie"  column="Especie"/>
        <property name="raza"  column="Raza"/>
        <property name="peso"  column="Peso"/>
    </class>
</hibernate-mapping>