<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM 
"classpath://org/hibernate/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:8889/Dise√±o_Veterinaria</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="simplehibernate.Animales"/>
		<mapping class="simplehibernate.Citas"/>
		<mapping class="simplehibernate.Clientes"/>
		<mapping class="simplehibernate.Detalles_Animales"/>
		<mapping class="siemplehibernate.Medicacion"/>
		<mapping class="siemplehibernate.Tratamiento"/>
	</session-factory>
</hibernate-configuration>
